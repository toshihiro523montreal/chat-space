
.main_chat__message-list__message
  .main_chat__message-list__message__header
    .main_chat__message-list__message__header__name
      = message.user.name
    .main_chat__message-list__message__header__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main_chat__message-list__message__body
    - if message.content.present?
      %p.main_chat__message-list__message__body__content
        = message.content
    = image_tag message.image.url, class: 'main_chat__message-list__message__body__image' if message.image.present?
