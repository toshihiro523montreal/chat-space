.main_chat
  .main_chat__group-info
    .main_chat__group-info-box
      .main_chat__group-info-box__left-text
        techcamp
      .main_chat__group-info-box__left-name
        Member : dddd
    =link_to "#" do
      .main_chat__group-info-box__right
        %p.main_chat__group-info-box__right-btn
          Edit
  .main_chat__message-list
    .main_chat__message-list__message-box
      .main_chat__message-list__message-box__header
        .main_chat__message-list__message-box__header__name
          techcamp
        .main_chat__message-list__message-box__header__time
          2020/03/27(Fri) 20:14:32
      .main_chat__message-list__message-box__body
        dddd
  .main_chat__form
    .main_chat__form__input-box
      .main_chat__form__input-box__area
        %input{type: "text", class: "main_chat__form__input-box__area__text", placeholder: "type a message"}
